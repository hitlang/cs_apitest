[

  {
    "test": {
      "name": "登录",
      "request": {
        "url": "/login?apikey=$apikey",
        "method": "POST",
        "headers": {
        },
        "data": {
          "user_name": "test7",
          "user_password": "123456",
          "user_unionid": 1
        }
      },
      "extract": [
        {
          "user_token": "content.result.user_token"
        }
      ]

    }
  },
  {
    "test": {
      "name": "添加商品到购物车",
      "request": {
        "url": "/addCart?apikey=$apikey",
        "method": "POST",
        "headers": {
        },
        "data": {
          "class_id": 1,
          "goods_id": 1,
          "buy_goods_num": 1,
          "user_unionid": 1,
          "user_token": "$user_token"
        }
      }
    }
  },
  {
    "test": {
      "name": "添加新的收货地址",
      "request": {
        "url": "/saveAddress?apikey=$apikey",
        "method": "POST",
        "headers": {
        },
        "data": {
          "user_token": "$user_token",
          "true_name": "刘浪",
          "region_id": 1,
          "region_value": "北京市",
          "address": "测试地址2",
          "zip_code": 1,
          "mod_phone": "${creat_phone()}"
        }
      }
    }
  },
  {
    "test": {
      "name": "获取配送地址",
      "request": {
        "url": "/addressList?apikey=$apikey",
        "method": "POST",
        "headers": {
        },
        "data": {
          "user_token": "$user_token"
        }
      },
      "extract": [
        {
          "add_id": "content.result.0.address_id"
        }
      ]

    }
  },
  {
    "test": {
      "name": "订单确认",
      "request": {
        "url": "/step?apikey=$apikey",
        "method": "POST",
        "headers": {
        },
        "data": {
          "user_token": "$user_token",
          "address_id": "$add_id",
          "user_unionid": 1
        }
      }

    }
  },
  {
    "test": {
      "name": "提交订单",
      "request": {
        "url": "/cartSubmit?apikey=$apikey",
        "method": "POST",
        "headers": {
        },
        "data": {
          "user_token": "$user_token",
          "address_id": "$add_id",
          "user_unionid": 1,
          "payment_code": "xxzf",
          "express_id": 7
        }
      }

    }
  }
]